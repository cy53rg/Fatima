<!-- Start preloader -->
<div id="preloader"></div>
<!-- End preloader -->

<!-- navbar -->
<%- include('../../partials/admin/nav') %>


<%- include('../../partials/messages') %>
<div id="layoutSidenav">
    
    <!-- sidenav -->
    <%- include('../../partials/admin/sidenav') %>

    <div id="layoutSidenav_content" >
        <main>
            
            <div class="container-fluid px-4 row">
               
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
                <div class="w-100 d-flex justify-content-end m-2">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Add to Gallery
                    </button>
                </div>
                <div class="mb-4">
                    <!-- Button trigger modal -->
                   
                    
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                            ...
                            </div>
                            <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                        </div>
                    </div>
                    
                    <div class="container mt-5 px-2">

                        <table class="table table-responsive table-dark">
                            <thead>
                              <tr>
                                <th scope="col">#</th>
                                <th scope="col">username</th>
                                <th scope="col">fullname</th>
                                <th scope="col">Email</th>
                                <th scope="col">role</th>
                                <th scope="col">Action</th>
                              </tr>
                            </thead>
                            <tbody>
                                <%if(users != undefined) {%>
                                    <%users.forEach((user, i)=>{ %>
                                        <tr>

                                        <th scope="row"><%= i += 1 %></th>
                                        <td><%= typeof user.username != undefined ? user.username : null%></td>
                                        <td><%= typeof user.fullName != undefined ? user.fullName : null%></td>
                                        <td><%= typeof user.email != undefined ? user.email : null%></td>
                                        <td><%= typeof user.role != undefined ? user.role : null%></td>
                                        <td>
                                            <a class="p-1 btn btn-sm btn-danger" href="users/delete?id=<%= typeof user.id != undefined ? user.id : null%>">Delete</a>
                                        </td>
                                        </tr>
                    
                                    <%})%>
                                <%}%>
                            </tbody>
                          </table>
                        
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
